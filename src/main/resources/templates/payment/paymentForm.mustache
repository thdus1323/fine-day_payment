{{> layout/header}}

<body>
<div class="order-container">
    <div class="product-image">
        <div class="grid-img1 grid-img"></div>
        <button  class="payment-submit-btn" type="submit">결제하기</button>
    </div>
    <div class="order-details">
        <h2>상품명</h2>
        <p>가격: 00원</p>

        <form method="post" action="/order">
            <div class="quantity-container">
                <label>수량:</label>
                <button  class="quantity" type="button" onclick="changeQuantity(-1)">-</button>
                <input class="quantity" type="number" id="quantity" name="quantity"
                   value="1" min="1" style="width:50px" readonly>
                <button  class="quantity" type="button" onclick="changeQuantity(1)">+</button>
            </div>
            <p>총 가격:  00원</p>

        </form>
    </div>
</div>

<script>
    function changeQuantity(change) {
        const quantityInput = document.getElementById('quantity');
        let currentQuantity = parseInt(quantityInput.value);

        if (currentQuantity + change >= 1) {
            quantityInput.value = currentQuantity + change;
        }
    }
</script>
</body>
